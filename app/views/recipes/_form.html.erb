<%= form_with(model: recipe) do |form| %>
  <% if recipe.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(recipe.errors.count, "error") %></h2>

      <ul>
        <% recipe.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :cook_time, "Cook Time(minutes)", style: "display: block" %>
    <%= form.number_field :cook_time, min: 0, step: 1 %>
  </div>

  <div>
    <%= form.label :difficulty, "Dificulty", style: "display: block" %>
    <%= form.select :difficulty, options_for_select(["Easy", "Medium", "Hard"], recipe.difficulty) %>
  </div>

  <div>
    <%= form.label :instructions, style: "display: block" %>
    <%= form.rich_text_area :instructions %>
  </div>

  <div style="margin-top: 10px">
    <%= form.submit " Save recipe" %>
  </div>
<% end %>
